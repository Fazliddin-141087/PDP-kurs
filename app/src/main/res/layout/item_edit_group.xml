<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:padding="30dp">

    <EditText
        android:inputType="textCapSentences"
        android:id="@+id/group_name_et"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edit_style"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:background="@drawable/edit_style"
        android:id="@+id/mentor_name_spinner"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/group_name_et" />

    <Spinner
        android:background="@drawable/edit_style"
        android:id="@+id/group_time_spinner"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mentor_name_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>