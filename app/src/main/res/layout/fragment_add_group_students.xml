<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroupStudentsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_new_add_group_student"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blue_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_vector__2_"
        app:title="Talaba qo'shish"
        app:titleTextColor="@color/white" />


    <EditText
        android:id="@+id/student_surname_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_style"
        android:hint="Familyasi"
        android:inputType="textCapSentences"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/student_name_et"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_new_add_group_student"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.75" />


    <EditText
        android:id="@+id/student_name_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_style"
        android:hint="Ismi"
        android:inputType="textCapSentences"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/student_father_name_et"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_surname_et"
        app:layout_constraintWidth_percent="0.75" />

    <EditText
        android:id="@+id/student_father_name_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_style"
        android:hint="Otasining ismi"
        android:inputType="textCapSentences"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/student_date_et"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_name_et"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/student_date_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_style"
        android:gravity="center_vertical"
        android:hint="18/10/2021"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:drawableEndCompat="@drawable/ic_vectorkalendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_father_name_et"
        app:layout_constraintWidth_percent="0.75" />

    <Button
        android:id="@+id/add_save_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_style"
        android:text="Saqlash"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>